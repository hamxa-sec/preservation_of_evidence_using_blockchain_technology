    "@emotion/styled": "^11.14.0",
    "@metamask/onboarding": "^1.0.1",
    "@types/node": "^22.15.18",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.9.0",
    "ethers": "^6.14.0",
    "framer-motion": "^12.11.4",
    "react-router-dom": "^6.30.0"
  }
}
